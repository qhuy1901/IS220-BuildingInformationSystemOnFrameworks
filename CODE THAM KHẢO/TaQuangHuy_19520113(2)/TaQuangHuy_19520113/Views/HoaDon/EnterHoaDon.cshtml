@model IEnumerable<TaQuangHuy_19520113.Models.KhachHang>
@{
    ViewData["Title"] = "Thêm bộ môn";
}
<h2>Thêm hóa đơn</h2>
<form action="/HoaDon/InsertHoaDon" method="post">
    <label for="HoTen">Tên khách hàng</label>
    <select name="MaKH" id="MaKH">
        @foreach (var item in Model)
        {
            <option value="@item.MaKH">@item.HoTen </option>

        }
    </select><br>
    <label for="HoTen">Tên nhân viên bán hàng</label>
    <select name="MaNV" id="MaNV">
        @foreach (var item in ViewBag.ListNhanVien)
        {
            <option value="@item.MaNV">@item.HoTen </option>

        }
    </select><br>
    <label for="MaBoMon">Số hóa đơn</label> <input type="text" name="SoHD" /><br>
    <label for="TenBomon">Trị giá</label> <input type="text" name="TriGia" /><br>
    <input type="submit" name="submit" value="Thêm" />
</form>