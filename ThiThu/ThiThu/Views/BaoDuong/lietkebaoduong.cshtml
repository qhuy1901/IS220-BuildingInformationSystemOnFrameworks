<table border="1">
    <tr><th>Ngày giờ nhận</th><th>Ngày giờ trả</th><th>Số km</th><th>Nội dung</th><th>Chức năng</th></tr>
    @foreach(var item in ViewBag.listbaoduong)
    {
    <tr>
        <td>@item.NgayNhan</td>
        <td>@item.NgayTra</td>
        <td>@item.SoKM</td>
        <td>@item.NoiDung</td>
        <td>
            <a href="/CT_BD/xemctbd?MaBD=@item.MaBD">Xem</a>
            @if(string.IsNullOrEmpty(item.NgayTra))
                {
                    <a href="/BaoDuong/xembaoduong?MaBD=@item.MaBD">Sửa</a>
                }
            else{
                <a>Sửa</a>}
        </td>
    </tr>
    }
</table>
